FROM node:20-alpine

# Install build dependencies for native modules (usb, escpos)
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    gcc \
    libusb-dev \
    udev \
    eudev-dev \
    linux-headers

WORKDIR /app
COPY package*.json ./
RUN npm install --legacy-peer-deps
COPY . .
EXPOSE 8000
CMD ["node", "backend-server.js"]
